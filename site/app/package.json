{
  "name": "ficusjs-script-site",
  "version": "1.0.0",
  "description": "Website for FicusJS script loader",
  "scripts": {
    "build": "cross-env NODE_ENV=production eleventy --input=src --output=dist",
    "build:css": "postcss src/css --dir dist/css",
    "postbuild:css": "run-p concat:css:*",
    "concat:css:home": "concat-cli -f dist/css/scribbler-global.css dist/css/scribbler-landing.css -o dist/css/home.css",
    "concat:css:doc": "concat-cli -f dist/css/scribbler-global.css dist/css/scribbler-doc.css dist/css/darcula.css -o dist/css/doc.css",
    "build:js": "terser -c -m -o dist/js/scribbler.js src/js/scribbler.js",
    "postbuild": "mkdirp dist/js && run-s build:* copy:* workbox:gen",
    "clean": "rimraf dist",
    "copy:js": "ncp src/js dist/js",
    "copy:favicon": "ncp src/favicon.ico dist/favicon.ico",
    "copy:img": "ncp src/img dist/img",
    "copy:manifest": "ncp src/manifest.json dist/manifest.json",
    "dev": "cross-env NODE_ENV=development eleventy --input=src --output=dist --serve",
    "predev": "npm run postbuild",
    "start": "npm run dev",
    "workbox:gen": "workbox generateSW workbox-config.js"
  },
  "author": "Matt Levy",
  "devDependencies": {
    "@11ty/eleventy": "^0.12.1",
    "concat-cli": "4.0.0",
    "cssnano": "4.1.10",
    "cross-env": "7.0.3",
    "mkdirp": "1.0.4",
    "ncp": "2.0.0",
    "npm-run-all": "4.1.5",
    "postcss": "8.2.8",
    "postcss-cli": "8.3.1",
    "rimraf": "3.0.2",
    "standard": "16.0.3",
    "terser": "5.6.1",
    "workbox-cli": "6.1.2"
  }
}
